@model CreateTaskVM

@section taskcss{
    <link rel="stylesheet" href="~/css/TaskCss.css" />
}

<div class="row d-flex justify-content-center container">
    <div class="col-md-8">
        <div class="card-hover-shadow-2x mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="fa fa-tasks"></i>&nbsp;Task Lists
                </div>

            </div>
            <form asp-action="CreateTask" asp-controller="Manager" method="post" enctype="multipart/form-data">
                <div class="scroll-area-sm">
                    <perfect-scrollbar class="ps-show-limits">
                        <div style="position: static;" class="ps ps--active-y">
                            <div class="ps-content">
                                <ul class=" list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="badge badge-warning ml-2" style="position: absolute; top: -9px;">Task Title *</div>
                                                        <input type="text" asp-for="Title" class="form-control" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="badge badge-warning ml-2" style="position: absolute; top: -9px;">Task Content *</div>
                                                        <input type="text" asp-for="Content" class="form-control" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>


                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="badge badge-warning ml-2" style="position: absolute; top: -9px;">Task Description *</div>
                                                        <textarea rows="4" asp-for="Description" class="form-control"></textarea>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="badge badge-warning ml-2" style="position: absolute; top: -9px;">Task EndTime *</div>
                                                        <input type="text" asp-for="EndTime" placeholder="Gün olarak giriniz süreyi" class="form-control" />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="form-control">
                                                            <label>Action *</label>
                                                            <select class="selectpicker" data-live-search="true" asp-for="@Model.Action" asp-items="@Html.GetEnumSelectList<TaskManagerSystem.Models.Enums.Action>()">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="form-control">
                                                            <label>PriorityStatu *</label>
                                                            <select class="selectpicker" data-live-search="true" asp-for="PriorityStatu" asp-items="@Html.GetEnumSelectList<PriorityStatu>()">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="form-control">
                                                            <label>File</label>
                                                            <input type="file" accept=".pdf" asp-for="File" />
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                    <li class="list-group-item">
                                        <div class="todo-indicator bg-warning"></div>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-2">
                                                </div>
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">
                                                        <div class="form-control">
                                                            <label asp-for="SelectPersonel">Personel *</label>
                                                            <select class="selectpicker" data-live-search="true" asp-for="SelectPersonel" asp-items="@(new SelectList(Model.Users,"Id","UserName"))">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>

                                </ul>
                            </div>

                        </div>
                    </perfect-scrollbar>
                </div>
                <div class="d-block text-right card-footer">
                    <button type="submit" class="btn btn-primary">Task Oluştur</button>
                </div>
            </form>
        </div>
    </div>
</div>