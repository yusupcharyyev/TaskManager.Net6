@model Tasks


@section managerTask{
    <link rel="stylesheet" href="~/css/ManagerTask.css" />
}

@*Yuksek*@
<div class="row d-flex justify-content-center container">
    <div class="col-md-12">
        <div class="card-hover-shadow-2x mb-3 card">
            <div class="card-header-tab card-header">
                <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                    <i class="fa fa-tasks"></i>&nbsp; Tasks
                </div>

            </div>
            <input type="hidden" asp-for="ID" />
            <div class="scroll-area-sm">
                <perfect-scrollbar class="ps-show-limits">
                    <div style="position: static;" class="ps ps--active-y">
                        <div class="ps-content">

                            <ul class=" list-group list-group-flush">
                                <li class="list-group-item">
                                    <div class="todo-indicator bg-danger"></div>
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left mr-2">
                                            </div>
                                            <div class="widget-content-left col-2">
                                                <div class="widget-heading">
                                                    @Model.Title
                                                </div>
                                            </div>

                                            <div class="widget-content-left col-2">
                                                <div class="widget-heading">
                                                    @Model.Content
                                                </div>
                                            </div>

                                            <div class="widget-content-left col-2">
                                                <div class="widget-heading">
                                                    @Model.CreateDate.AddDays(Model.EndTime).ToString("dd.MM.yyyy")
                                                </div>
                                            </div>

                                            <div class="widget-content-left col-3">
                                                <div class="widget-heading">
                                                    <ul>
                                                        @foreach (var item in Model.TaskDescriptions)
                                                        {
                                                            <li>@item.Description</li>
                                                        }
                                                    </ul>
                                                    @using (Html.BeginForm("AddDescription", "TaskPersonel"))
                                                    {
                                                        <div class="input-group mt-2">
                                                            <input type="text" class="form-control form-control-sm" name="description" id="description" />
                                                            <input type="hidden" asp-for="ID" />
                                                            <div class="input-group-append">
                                                                <button type="submit" style="height:31px;" class="input-group-text">Ekle</button>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                            <div class="widget-content-right col-3">
                                                @using (Html.BeginForm("UpdateStatu", "TaskPersonel"))
                                                {
                                                    <div class="badge badge-danger ml-2" style="position: absolute; top: -8px;">@Model.Action</div>
                                                    <div class="form-control">
                                                        <label>Action *</label>
                                                        <select class="selectpicker" id="action" name="action" data-live-search="true" asp-for="@Model.Action" asp-items="@Html.GetEnumSelectList<TaskManagerSystem.Models.Enums.Action>()">
                                                        </select>
                                                    </div>

                                                    <input type="hidden" asp-for="ID" />
                                                    <div class="badge badge-danger ml-2" style="position: relative; top: 9px;">@Model.priorityStatu</div>
                                                    <div class="form-control">
                                                        <label>PriorityStatu *</label>
                                                        <select class="selectpicker" id="priority" name="priority" data-live-search="true" asp-for="@Model.priorityStatu" asp-items="@Html.GetEnumSelectList<PriorityStatu>()">
                                                        </select>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary btn-sm mt-2">Durumu Güncelle</button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>

                    </div>
                </perfect-scrollbar>
            </div>
        </div>
    </div>
</div>